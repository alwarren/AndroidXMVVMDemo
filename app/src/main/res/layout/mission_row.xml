<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:theme="@style/Widget.MaterialComponents.CardView"
        app:cardElevation="4dp"
        tools:context=".feature.mission.MissionsActivity"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
                android:id="@+id/missionName"
                tools:text="@sample/missions.json/data/mission_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/idHash"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                />
        <TextView
                android:id="@+id/idHash"
                android:text="@string/hash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/missionName"
                app:layout_constraintEnd_toStartOf="@+id/missionId"
                />
        <TextView
                android:id="@+id/missionId"
                android:text="@string/id"
                tools:text="@sample/missions.json/data/mission_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/missionName"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                />
        <TextView
                tools:text="@sample/missions.json/data/manufacturers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/manufacturers"
                app:layout_constraintTop_toBottomOf="@id/missionName"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="@+id/missionName"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>